{
	"name": "root",
	"private": true,
	"scripts": {
		"build": "pnpm -r --no-bail build",
		"clean": "git clean -f -d -X",
		"clean:branches": "git branch --merged | grep -v \\* | xargs git branch -D",
		"health": "pnpm i --ignore-scripts && pnpm clean && pnpm i && pnpm build && pnpm lint && pnpm format",
		"format": "pnpm -r --no-bail format",
		"lint": "pnpm -r --no-bail lint",
		"unused": "pnpm -r --no-bail unused",
		"ncu:major": "ncu && pnpm -r --no-bail exec ncu -x rimraf",
		"ncu:minor": "ncu -t minor -u && pnpm -r --no-bail exec ncu -t minor -u -x @stencil/*",
		"ncu:patch": "ncu -t patch -u && pnpm -r --no-bail exec ncu -t patch -u",
		"postinstall": "echo \"Don't forget to build all packages once: pnpm -r --no-bail build\"",
		"prepare": "pnpm format -w && npm-run-all2 prepare:*",
		"prepare:defaults": "npm-run-all2 prepare:defaults:*",
		"prepare:defaults:config": "npm-run-all2 prepare:defaults:config:*",
		"prepare:defaults:config:csr-react-vite": "cpy --dot \".defaults/config/**/*\" \"csr/react-vite/\"",
		"prepare:defaults:config:csr-vue-vite": "cpy --dot \".defaults/config/**/*\" \"csr/vue-vite/\"",
		"prepare:defaults:config:kolibri-library": "cpy --dot \".defaults/config/**/*\" \"kolibri/library/\"",
		"prepare:defaults:config:kolibri-library-app": "cpy --dot \".defaults/config/**/*\" \"kolibri/library/app/\"",
		"prepare:defaults:config:kolibri-library-components": "cpy --dot \".defaults/config/**/*\" \"kolibri/library/components/\"",
		"prepare:defaults:config:kolibri-library-schema": "cpy --dot \".defaults/config/**/*\" \"kolibri/library/schema/\"",
		"prepare:defaults:config:kolibri-library-theme": "cpy --dot \".defaults/config/**/*\" \"kolibri/library/theme/\"",
		"prepare:defaults:config:kolibri-theme": "cpy --dot \".defaults/config/**/*\" \"kolibri/theme/\"",
		"prepare:defaults:config:svg2font": "cpy --dot \".defaults/config/**/*\" \"svg2font/\"",
		"prepare:defaults:csr": "npm-run-all2 prepare:defaults:csr:*",
		"prepare:defaults:csr:react-vite": "cpy --dot \"csr/.defaults/**/*\" \"csr/react-vite/\"",
		"prepare:defaults:csr:vue-vite": "cpy --dot \"csr/.defaults/**/*\" \"csr/vue-vite/\"",
		"prepare:defaults:static": "npm-run-all2 prepare:defaults:static:*",
		"prepare:defaults:static:csr-react-vite": "cpy --dot \".defaults/static/**/*\" \"csr/react-vite/\"",
		"prepare:defaults:static:csr-vue-vite": "cpy --dot \".defaults/static/**/*\" \"csr/vue-vite/\"",
		"prepare:husky": "rimraf .husky && husky && npm-run-all2 prepare:husky:*",
		"prepare:husky:commitlint": "echo \"npx commitlint --edit $1\" >> .husky/commit-msg",
		"prepare:husky:format": "echo \"pnpm -r --no-bail format\" >> .husky/pre-push",
		"prepare:husky:lint": "echo \"pnpm -r --no-bail lint\" >> .husky/pre-commit",
		"xprepare:husky:unused": "echo \"pnpm -r --no-bail unused\" >> .husky/pre-push",
		"prepare:remove": "npm-run-all2 prepare:remove:*",
		"prepare:remove:outdated": "pnpm -r --no-bail exec rimraf prettier.config.js prettier.config.cjs",
		"smoketest": "pnpm clean && pnpm i && pnpm build && pnpm format && pnpm lint && pnpm unused",
		"test": "pnpm -r --no-bail --workspace-concurrency=1 test",
		"test-reset-and-update": "rimraf packages/themes/**/snapshots/** && pnpm test-update",
		"test-update": "pnpm -r --no-bail --workspace-concurrency=1 test-update",
		"update": "pnpm ncu:minor && pnpm ncu:major"
	},
	"devDependencies": {
		"@commitlint/cli": "20.3.1",
		"@commitlint/config-conventional": "20.3.1",
		"cpy-cli": "6.0.0",
		"husky": "9.1.7",
		"npm-check-updates": "19.3.1",
		"npm-run-all2": "8.0.4",
		"prettier": "3.7.4",
		"rimraf": "6.1.2",
		"lint-staged": "16.2.7"
	},
	"engines": {
		"node": "^22",
		"npm": "^10",
		"pnpm": "^10"
	}
}
